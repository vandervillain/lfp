{
  "name": "lfp",
  "version": "1.0.0",
  "description": "A WebRTC voice client.",
  "scripts": {
    "docker:fresh": "docker-compose down && docker-compose build --pull && docker-compose up --no-start",
    "docker:start": "docker-compose start",
    "install-dependencies": "run-p install-dependencies:server install-dependencies:client",
    "install-dependencies:server": "cd server && yarn --frozen-lockfile",
    "install-dependencies:client": "cd client && yarn --frozen-lockfile",
    "build": "cd client && yarn build",
    "start": "run-p start:server start:client",
    "start:server": "cd server && yarn start",
    "start:client": "cd client && yarn start",
    "test": "run-p -r start test:e2e",
    "test:e2e": "cd client && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vandervillain/lfp.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vandervillain/lfp/issues"
  },
  "homepage": "https://github.com/vandervillain/lfp#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
